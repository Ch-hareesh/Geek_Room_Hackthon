# ==============================
# üåê APPLICATION SETTINGS
# ==============================
APP_NAME=Financial Research Agent
APP_ENV=development
DEBUG=True
HOST=0.0.0.0
PORT=8000

# ==============================
# ü§ñ AI / LLM CONFIGURATION
# ==============================
# Choose provider: local | groq | gemini
LLM_PROVIDER=groq

# Local model (Ollama / LM Studio)
LOCAL_LLM_MODEL=llama3

# Groq (optional - free tier) ‚Äî https://console.groq.com
GROQ_API_KEY=your_groq_api_key_here

# Gemini (optional free tier) ‚Äî https://aistudio.google.com
GEMINI_API_KEY=your_gemini_api_key_here

# ==============================
# üìä FORECAST MODEL SETTINGS
# ==============================
TFT_MODEL_PATH=backend/forecasting/tft/tft_model.pth
TFT_PARAMS_PATH=backend/forecasting/tft/tft_dataset_params.pkl
XGB_MODEL_PATH=backend/forecasting/xgboost/xgb_model.pkl
FEATURES_PATH=backend/forecasting/features.pkl
STOCKS_LIST_PATH=backend/forecasting/stocks_used.pkl
FORECAST_HORIZON_DAYS=30
ENCODER_LENGTH=60

# ==============================
# üìà MARKET DATA SETTINGS
# ==============================
DATA_PROVIDERS=yfinance,alpha_vantage
CACHE_ENABLED=True
CACHE_TTL_MINUTES=60

# ==============================
# üìà DATA API KEY
# ==============================
# Alpha Vantage ‚Äî https://www.alphavantage.co/support/#api-key
ALPHA_VANTAGE_KEY=your_alpha_vantage_key_here

# ==============================
# üß† AGENT SETTINGS
# ==============================
QUICK_MODE_TIMEOUT=30
DEEP_MODE_TIMEOUT=180
CONFIDENCE_THRESHOLD=0.65

# ==============================
# üóÑ DATABASE SETTINGS
# ==============================
DB_TYPE=sqlite
DATABASE_URL=sqlite:///./financial_agent.db

# ==============================
# üß† MEMORY & PERSONALIZATION
# ==============================
MEMORY_ENABLED=True
DEFAULT_RISK_PROFILE=moderate
DEFAULT_TIME_HORIZON=long_term

# ==============================
# üîê SECURITY
# ==============================
API_KEY_REQUIRED=False
API_KEY=supersecretkey

# ==============================
# üéØ DEMO MODE & PERFORMANCE
# ==============================
DEMO_MODE=True
DEMO_DEFAULT_TICKER=AAPL
DEMO_TICKERS=AAPL,MSFT,TSLA,GOOGL
DEMO_CACHE_TTL=3600

# ==============================
# üìä LOGGING
# ==============================
LOG_LEVEL=INFO
LOG_FILE=app.log
